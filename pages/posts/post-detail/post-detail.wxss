.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;
  height: 450rpx;
  margin-bottom: 20rpx;
}
.audio{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  opacity: 0.6;
  top: 180rpx;
}
.author-date{
  flex-direction: row;
  margin-left: 20rpx;
}
.logo-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}
.date{
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  font-size: 36rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-weight: 700;
  color: #4b556c;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
} 
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  vertical-align: middle;
  top: 46rpx;
  margin: 0 auto;
  background-color: #e5e5e5;
  position: relative;
  z-index: -1;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 26rpx;
}

.artical-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  background-color: white;
}
.artical-head{
  margin:10rpx 0 10rpx 20rpx;
}
.artical-logo{
  height:60rpx;
  width: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.artical-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.artical-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-left:10px;
  margin-bottom: 10px;
}
.artical-img{
  width: 100%;
  height: 400rpx;
  margin-bottom: 15px;
}
.artical-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10px;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}